<policy>
  <rule name="access bank A first time">
    <subjectCondition name="employee" history="empty"/>
    <resourceCondition name="bank A"/>
    <!--  the action authorized by this rule.  -->
    <action name="read"/>
    <subjectUpdate history="bank A"/>
  </rule>
  <rule name="access bank A again">
    <subjectCondition name="employee" history="bank A"/>
    <resourceCondition name="bank A"/>
    <action name="read"/>
  </rule>
  <rule name="access bank B first time">
    <subjectCondition name="employee" history="empty"/>
    <resourceCondition name="bank B"/>
    <action name="read"/>
    <subjectUpdate history="bank B"/>
  </rule>
  <rule name="access bank B again">
    <subjectCondition name="employee" history="bank B"/>
    <resourceCondition name="bank B"/>
    <action name="read"/>
  </rule>
  <rule name="customers collectively can view each movie at most 5 times">
    <subjectCondition name="customer"/>
    <resourceCondition name="movie" viewCount="&lt;5"/>
    <action name="view"/>
    <resourceUpdate viewCount="++"/>
  </rule>
</policy>

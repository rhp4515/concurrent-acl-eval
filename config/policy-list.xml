<policy>
  <rule name="access bank A first time">
    <subjectCondition id=1 type="employee" history="empty"/>
    <resourceCondition id=1 type="bank" id="bank A"/>
    <!--  the action authorized by this rule.  -->
    <action name="read"/>
    <subjectUpdate history="bank A"/>
  </rule>
  <rule name="access bank A again">
    <subjectCondition type="employee" history="bank A"/>
    <resourceCondition id="bank A"/>
    <action name="read"/>
  </rule>
  <rule name="access bank B first time">
    <subjectCondition type="employee" history="empty"/>
    <resourceCondition id="bank B"/>
    <action name="read"/>
    <subjectUpdate history="bank B"/>
  </rule>
  <rule name="access bank B again">
    <subjectCondition type="employee" history="bank B"/>
    <resourceCondition id="bank B"/>
    <action name="read"/>
  </rule>
  <rule name="customers collectively can view each movie at most 5 times">
    <subjectCondition type="customer"/>
    <resourceCondition type="movie" viewCount="<5"/>
    <action name="view"/>
    <resourceUpdate viewCount="++"/>
  </rule>
</policy>